{
  "scripts": {
    "dev": "nodemon --exec ts-node -r dotenv/config src/server.ts",
    "start": "ts-node -r dotenv/config src/server.ts",
    "db:create": "node -r dotenv/config -r ts-node/register src/db/connection.ts",
    "db:migrate-seed": "npm run db:migrate && npm run db:seed",
    "db:migrate": "dotenv -e .env -- npx sequelize-cli db:migrate --config=./config/sequelize-cli.js",
    "db:seed": "dotenv -e .env -- npx sequelize-cli db:seed:all --config=./config/sequelize-cli.js",
    "db:setup-init": "npm run db:create && npm run db:migrate && npm run db:seed"
  },
  "devDependencies": {
    "@types/cors": "2.8.19",
    "@types/express": "^5.0.5",
    "@types/pg": "8.15.6",
    "@types/sequelize": "^6.12.0",
    "@types/supertest": "6.0.3",
    "dotenv-cli": "11.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "sequelize-cli": "6.6.3",
    "supertest": "7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/csv-parse": "1.1.12",
    "axios": "^1.13.2",
    "cors": "2.8.5",
    "csv-parser": "3.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "2.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testMatch": [
      "**/src/tests/**/*.test.ts"
    ]
  }
}
