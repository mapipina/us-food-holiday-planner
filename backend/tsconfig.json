{
  "compilerOptions": {
    "target": "es2020",             
    "module": "commonjs",  
    "rootDir": "./src", 
    "outDir": "./dist",                  
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node", 
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
